/* miniprogram/pages/doctor/doctor.wxss */
.container {
  padding: 20rpx;
  background: #f6f6f6;
  min-height: 100vh;
}

.loading {
  text-align: center;
  padding: 100rpx 0;
  color: #999;
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 200rpx 40rpx;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 40rpx;
}

.empty-text {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 20rpx;
}

.empty-hint {
  font-size: 28rpx;
  color: #999;
}

.range-selector {
  display: flex;
  gap: 20rpx;
  margin-bottom: 30rpx;
  background: #fff;
  padding: 20rpx;
  border-radius: 16rpx;
}

.range-item {
  flex: 1;
  text-align: center;
  padding: 20rpx;
  border-radius: 12rpx;
  background: #f0f0f0;
  color: #666;
  font-size: 28rpx;
}

.range-item.active {
  background: #2e7d32;
  color: #fff;
}

.summary-card {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
}

.summary-section {
  margin-bottom: 40rpx;
  padding-bottom: 30rpx;
  border-bottom: 1rpx solid #eee;
}

.summary-section:last-child {
  border-bottom: none;
  margin-bottom: 0;
  padding-bottom: 0;
}

.section-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #333;
  margin-bottom: 20rpx;
}

.section-content {
  font-size: 28rpx;
  color: #666;
  line-height: 1.8;
}

.section-content view {
  margin-bottom: 10rpx;
}

.risk-warning {
  background: #fff3cd;
  border: 1rpx solid #ffc107;
  border-radius: 12rpx;
  padding: 20rpx;
  color: #856404;
  font-size: 28rpx;
  margin-top: 20rpx;
}

.note-item {
  margin-bottom: 20rpx;
  padding: 20rpx;
  background: #f9f9f9;
  border-radius: 12rpx;
}

.note-date {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 10rpx;
}

.note-text {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

