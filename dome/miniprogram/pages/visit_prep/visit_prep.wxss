page {
  background: #f5f5f7;
  min-height: 100vh;
}

.page {
  min-height: 100vh;
}

.container {
  padding: 28rpx 32rpx 40rpx;
}

.header {
  margin-bottom: 24rpx;
}

.title {
  font-size: 40rpx;
  font-weight: 700;
  color: #111;
  letter-spacing: 0.2rpx;
}

.subtitle {
  margin-top: 8rpx;
  font-size: 26rpx;
  color: rgba(0,0,0,0.55);
  line-height: 1.45;
}

.card {
  background: #fff;
  border-radius: 22rpx;
  padding: 24rpx;
  margin-bottom: 18rpx;
  box-shadow: 0 10rpx 30rpx rgba(0,0,0,0.05);
  border: 1rpx solid rgba(0,0,0,0.04);
}

.card-title {
  font-size: 30rpx;
  font-weight: 700;
  color: #111;
  margin-bottom: 14rpx;
}

.hint {
  font-size: 24rpx;
  color: rgba(0,0,0,0.45);
  margin-bottom: 10rpx;
}

.field {
  margin-top: 16rpx;
}

.label {
  font-size: 24rpx;
  color: rgba(0,0,0,0.70);
  margin-bottom: 10rpx;
}

.required {
  color: #d93025;
  margin-left: 6rpx;
}

.textarea {
  width: 100%;
  min-height: 88rpx;
  padding: 16rpx 16rpx;
  border-radius: 14rpx;
  background: #fafafa;
  border: 1rpx solid rgba(0,0,0,0.08);
  font-size: 26rpx;
  color: #111;
  line-height: 1.45;
}

.check-group {
  margin-top: 6rpx;
}

.check-item {
  display: flex;
  align-items: center;
  padding: 14rpx 6rpx;
  border-radius: 14rpx;
}

.check-item:active {
  background: rgba(0,0,0,0.03);
}

.cb {
  margin-right: 16rpx;
}

.check-text {
  font-size: 26rpx;
  color: rgba(0,0,0,0.86);
  line-height: 1.45;
}

.input-wrap {
  margin-top: 12rpx;
}

.footer {
  margin-top: 10rpx;
}

.btn {
  height: 88rpx;
  border-radius: 22rpx;
  background: #111;
  color: #fff;
  font-size: 28rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
}

.meta {
  margin-top: 12rpx;
  font-size: 22rpx;
  color: rgba(0,0,0,0.45);
  text-align: center;
}

.safe-space {
  height: 40rpx;
}